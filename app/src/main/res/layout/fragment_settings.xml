<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">
    <TextView
        android:id="@+id/sample_rate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_rate_title"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/sample_rate_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/sample_rate_description"
        app:layout_constraintTop_toBottomOf="@id/sample_rate_title"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <SeekBar
        android:id="@+id/sample_rate_seek_bar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:min="1"
        android:max="30"
        android:progress="1"
        app:layout_constraintTop_toBottomOf="@id/sample_rate_description"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/sample_rate_seek_bar_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_rate_value"
        app:layout_constraintLeft_toRightOf="@id/sample_rate_seek_bar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sample_rate_description"
        />

    <TextView
        android:id="@+id/accuracy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accuracy"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/sample_rate_seek_bar"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/accuracy_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/accuracy_description"
        app:layout_constraintTop_toBottomOf="@id/accuracy_title"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <SeekBar
        android:id="@+id/accuracy_seek_bar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:min="10"
        android:max="500"
        android:progress="10"
        app:layout_constraintTop_toBottomOf="@id/accuracy_description"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/accuracy_seek_bar_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accuracy_value"
        app:layout_constraintLeft_toRightOf="@id/accuracy_seek_bar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accuracy_description"
        />

</androidx.constraintlayout.widget.ConstraintLayout>